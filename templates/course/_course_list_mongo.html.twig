{% for course in coursesMongo  %}
    <div id="container" class="row" style="margin: 1vw; background-color: #FFFFFF">
        {{ form_start(edit_course_forms['mongo'][course.id], { 'enctype': 'multipart/form-data' }) }}
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <p>nom du thème :</p>
                            {{ form_widget(edit_course_forms['mongo'][course.id].title,{  'attr': {  style:"width: 25vw;"} })}}
                        </div>
                        <div class="col-md-4">
                            <p>prix du thème :</p>
                            {{ form_widget(edit_course_forms['mongo'][course.id].price,{  'attr': {  style:"width: 25vw;"} })}}
                        </div>
                        <div class="col-md-4">
                            <p>thème d'affilliation :</p>
                            {{ form_widget(edit_course_forms['mongo'][course.id].theme,{  'attr': {  style:"width: 25vw;"} })}}
                        </div>
                        <input type="hidden" name="course_form[form_type]" value="edit">
                        <input type="hidden" name="course_form[edit_course_id]" value="{{ course.id }}">
                        <input type="hidden" name="storage" value="mongo">
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button  class="btn btn-outline-dark d-flex align-items-center justify-content-center" id="button" style="width:15vw; height:5vh">modifier</button>
                        {{ form_row(edit_course_forms['mongo'][course.id]._token) }}
                        {{ form_end(edit_course_forms['mongo'][course.id], { 'render_rest': false }) }}
                        <form method="post" action="{{ path('app_admin') }}" onsubmit="return confirm('Voulez-vous supprimer cet utilisateur ?');">
                            <input type="hidden" name="delete_course_id" value="{{ course.id }}">
                            <input type="hidden" name="db" value="mongo">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
                            <button  class="btn btn-outline-dark d-flex align-items-center justify-content-center" id="button" style="width:15vw; height:5vh">supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
    </div>
{% endfor %}