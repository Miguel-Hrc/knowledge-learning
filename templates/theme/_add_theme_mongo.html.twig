{{ form_start(add_theme_form_mongo, {
    'enctype': 'multipart/form-data',
    'attr': {'id': 'add-form'}
}) }}
<div class="row align-items-center">
    <div class="col-md-12">
        <div class="row mb-3">
            <div class="col-md-12 ">
                <p>nom du theme :</p>
                {{ form_label(add_theme_form_mongo.name, null, { label: false} ) }}
                {{ form_widget(add_theme_form_mongo.name, { 'attr': {  style:"width: 35vw;"}}) }}
                {{ form_errors(add_theme_form_mongo.name) }}
            </div>
        </div>
        <div class="d-flex justify-content-end gap-2">
            {{ form_row(add_theme_form_mongo._token) }}
            <input type="hidden" name="add_theme" value="1">
            <input type="hidden" name="storage" value="mongo">
            <button type="submit" class="btn btn-outline-dark d-flex align-items-center justify-content-center" id="button" style="width:15vw; height:5vh">ajouter</button>
        </div>
    </div>
</div>
{{ form_end(add_theme_form_mongo, { 'render_rest': false }) }}